extends layout

block content
  body
    h1 #{title}
    p
      a.button(href='books_new') Create New Book
    p
      | Filters 
      a(href='all_books') All
      |  
      a(href='books_overdue') Overdue
      |  
      a(href='checked_books') Checked Out
        table
          thead
            tr
              th Title
              th Author
              th Genre 
              th First Published           
            tbody
              each book in books
                tr
                  td
                    a(href="/book_detail/" + book.id)= book.title
                  td= book.author
                  td= book.genre
                  td= book.first_published

                  

              
