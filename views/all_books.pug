extends layout

block content
  body
    h1 Books
    p
      a.button(href='new_book') Create New Book
    p
      | Filters 
      a(href='books/all_books') All
      |  
      a(href='books/overdue') Overdue
      |  
      a(href='books/checked_out') Checked Out
        table
          thead
            tr
              th Title
              th Author
              th Genre 
              th First Published           
            tbody
              each book in books
                tr
                  td
                    a(href="/book_detail/" + book.id)= book.title
                  td= book.author
                  td= book.genre
                  td= book.first_published

                  

              
